<server>
  <featureManager>
    <feature>jndi-1.0</feature>
    <!-- <feature>osgiConsole-1.0</feature> -->
    <feature>persistentExecutor-1.0</feature>
    <feature>servlet-3.1</feature>
    <feature>componenttest-1.0</feature>
  </featureManager>

  <include location="../fatTestPorts.xml"/>

  <persistentExecutor id="executor1" jndiName="concurrent/executor1" pollInterval="4s" retryLimit="1" pollSize="100"/>
  <persistentExecutor id="executor2" jndiName="concurrent/executor2" taskStoreRef="defaultDatabaseStore" pollInterval="4s" retryLimit="1"/>

  <databaseStore id="defaultDatabaseStore" keyGenerationStrategy="SEQUENCE"/>
  
  <library id="DerbyEmbeddedLib">
    <fileset dir="${shared.resource.dir}/derby" includes="derby.jar"/>
  </library>
  
  <library id="GeneralLib">
    <fileset dir="${shared.resource.dir}/jdbc"/>
  </library>

  <!-- Always get a derbyEmbedded dataSource.  Only used if no database prop is not set, or is set to derbyEmbedded -->
  <!--  
  <dataSource jndiName="jdbc/derby" fat.modify="true" containerAuthDataRef="authx">
    <jdbcDriver libraryRef="DerbyEmbeddedLib"/>
    <properties.derby.embedded createDatabase="create" databaseName="memory:persistmultidb"/>
  </dataSource>
  -->

  <dataSource jndiName="jdbc/anonymous/Driver">
    <jdbcDriver libraryRef="GeneralLib"/>
    <properties serverName="$(env.HOST)" port="${env.PORT}" databaseName="${env.DB}" user="${env.USER}" password="${env.PASS}"/>
  </dataSource>

  <authData fat.modify="true" id="authx" user="userx" password="passx"/>
  
  <javaPermission codebase="${shared.resource.dir}/derby/derby.jar" className="java.security.AllPermission"/>
  <javaPermission codebase="${shared.resource.dir}/jdbc/driver.jar" className="java.security.AllPermission"/>
  <javaPermission className="javax.management.MBeanServerPermission" name="createMBeanServer"/>
  <javaPermission className="java.lang.RuntimePermission" name="accessDeclaredMembers"/>
  <javaPermission className="java.lang.reflect.ReflectPermission" name="suppressAccessChecks"/>

  <transaction totalTranLifetimeTimeout="300"/>

  <variable name="onError" value="FAIL"/>
</server>